<div class="container my-3">
    <div class="row justify-content-md-center">
        <div class="col col-lg-5 col-md-5 col-sm-5">
            <div class="card">
                <div class="card-header text-center">
                    SignIn Page
                </div>
                <div class="card-body">
                    <div class="user-avatar">
                        <%= image_tag("avatar.jpeg", size: '100x100', alt:'avatar', class: 'rounded mx-auto d-block') %>
                    </div>
                    <%= form_with model: @user, url: signup_path, method: :post, data: {turbo: false} do |f| %>
                    <div id="errors">
                        </div>
                        <div class="form-group mb-2">
                            <%= f.label :email, {class: 'form-label'} %>
                            <%= f.email_field :email, {class: 'form-control'} %>
                            <% if @user.errors[:email].any? %>
                                <div class="row justify-content-center mt-2">
                                    <div class="col col-auto">
                                        <p><%=  @user.errors.full_messages_for(:email).uniq.first %></p>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                        <div class="form-group mb-2">
                            <%= f.label :password, {class: 'form-label'} %>
                            <%= f.password_field :password, {class: 'form-control'} %>
                            <% if @user.errors[:password].any? %>
                                <div class="row justify-content-center mt-2">
                                    <div class="col col-auto">
                                        <p><%=  @user.errors.full_messages_for(:password).uniq.first %></p>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                        <div class="form-group mb-2">
                            <%= f.label :password_confirmation, {class: 'form-label'}  %>
                            <%= f.password_field :password_confirmation, {class: 'form-control'}  %>
                            <% if @user.errors[:password_confirmation].any? %>
                                <div class="row justify-content-center mt-2">
                                    <div class="col col-auto">
                                        <p><%=  @user.errors.full_messages_for(:password_confirmation).uniq.first %></p>
                                    </div>
                                </div>
                            <% end %>
                        </div>

                        <div class="row justify-content-center mt-2">
                            <div class="col col-auto">
                                <%= f.submit "submit", {class: "btn btn-form rounded-pill py-2 px-4"} %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>



