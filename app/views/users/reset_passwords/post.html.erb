
<div class="container my-3">
    <div class="row justify-content-md-center">
        <div class="col col-lg-5 col-md-5 col-sm-5">
            <div class="card">
                <div class="card-header text-center">
                    Reset Password
                </div>
                <div class="card-body">
                    <div class="user-avatar">
                        <%= image_tag("avatar.jpeg", size: '100x100', alt:'avatar', class: 'rounded mx-auto d-block') %>
                    </div>
                    <%= form_with url: password_reset_path, method: :post, data: {turbo: false} do |form| %>

                    <div class="form-group mb-2">
                        <%= form.label :email, class: 'form-label' %>
                        <%= form.email_field :email, class: 'form-control' %>
                    </div>

                    <%= console %>
                    <% if !@error_message.nil? %>
                    <div class="row justify-content-center mt-3">
                        <div class="col col-auto">
                            <p>No account found with that email address</p>
                        </div>
                    </div>
                    <% end %>

                    <div class="row justify-content-center mt-3">
                        <div class="col col-auto">
                            <%= form.submit 'reset password', class: "btn btn-form rounded-pill py-2 px-4" %>
                        </div>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>


