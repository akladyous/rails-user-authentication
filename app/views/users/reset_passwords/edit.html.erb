<div class="container my-3">
    <div class="row justify-content-md-center">
        <%= render partial: 'shared/flash' %>
        <div class="col col-lg-6 col-md-6 col-sm-5">
            <div class="card">
                <div class="card-header text-center">
                    Reset Password
                </div>
                <div class="card-body">
                    <div class="user-avatar">
                        <%= image_tag("avatar.jpeg", size: '100x100', alt:'avatar', class: 'rounded mx-auto d-block') %>
                    </div>
                    <%= form_with model: @user, url: password_reset_edit_path(token: params[:token]), method: :post, data: {turbo: false} do |form| %>

                    <div class="form-group mb-2">
                        <%= form.label :password, class: 'form-label' %>
                        <%= form.password_field :password, class: 'form-control' %>
                    </div>
                    <div class="form-group mb-2">
                        <%= form.label :password_confirmation, class: 'form-label' %>
                        <%= form.password_field :password_confirmation, class: 'form-control' %>
                    </div>

                    <div class="row justify-content-center mt-3">
                        <div class="col col-auto">
                            <%= form.submit 'reset password', class: "btn btn-form rounded-pill py-2 px-4" %>
                        </div>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>


