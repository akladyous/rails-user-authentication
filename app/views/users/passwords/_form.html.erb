<%= console %>
<div class="container my-3">
    <div class="row justify-content-md-center">
        <div class="col col-lg-6 col-md-6 col-sm-5">
            <div class="card">
                <div class="card-header text-center">
                    Change Password
                </div>
                <div class="card-body">
                    <div class="user-avatar">
                        <%= image_tag("avatar.jpeg", size: '100x100', alt:'avatar', class: 'rounded mx-auto d-block') %>
                    </div>
                    <%= form_with model: @password_form, url: edit_user_password_path, method: :patch, data: {turbo: false} do |f| %>

                        <div class="form-group mb-2">
                            <%= f.label :original_password, {class: 'form-label'} %>
                            <%= f.password_field :original_password, {class: 'form-control'} %>


                        </div>

                        <div class="form-group mb-2">
                            <%# label_tag :new_password, nil, class: 'form-label' %>
                            <%# password_field_tag :new_password, nil, class: 'form-control' %>
                            <%= f.label :new_password, {class: 'form-label'} %>
                            <%= f.password_field :new_password, {class: 'form-control'} %>

                        </div>
                        <div class="form-group mb-2">
                            <%# label_tag :new_password_confirmation, nil, class: 'form-label'  %>
                            <%# password_field_tag :new_password_confirmation, nil, {class: 'form-control'}  %>
                            <%= f.label :new_password_confirmation, {class: 'form-label'} %>
                            <%= f.password_field :new_password_confirmation, {class: 'form-control'} %>
                        </div>

                        <div class="row justify-content-center mt-2">
                            <div class="col col-auto">
                                <% if @password_form.errors.any? %>
                                <div class="row mt-2">
                                    <div class="col col-auto">
                                        <p class="text-stat">
                                            <%=  @password_form.errors.full_messages.uniq.first %>
                                        </p>
                                    </div>
                                </div>
                            <% end %>
                            </div>
                        </div>
                        <div class="row justify-content-center mt-2">
                            <div class="col col-auto">
                                <%= f.submit "submit", {class: "btn btn-form rounded-pill py-2 px-4"} %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>



